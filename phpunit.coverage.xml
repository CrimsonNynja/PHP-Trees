<phpunit colors="true">
    <testsuites>
        <testsuite name="PHP Trees test suites">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-html"
             target="./codeCoverage"
             lowUpperBound="40"
             highLowerBound="80"
             showUncoveredFiles="false"/>
    </logging>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
</phpunit>
